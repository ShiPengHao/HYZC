<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.yimeng.hyzc.activity.LoginActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:paddingTop="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tv_bg"
            android:drawableTop="@mipmap/home"
            android:gravity="center"
            android:text="@string/home"
            android:textSize="18dp" />


        <TextView
            android:paddingTop="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tv_bg"
            android:drawableTop="@mipmap/pill"
            android:gravity="center"
            android:text="@string/drug"
            android:textSize="18dp" />

        <TextView
            android:paddingTop="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tv_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/my"
            android:gravity="center"
            android:text="@string/my"
            android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>
