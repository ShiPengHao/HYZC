<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_grey_line"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_appointmentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/appointment_id"
            android:textColor="@color/black_item_title" />

        <TextView
            android:id="@+id/tv_appointStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:text="@string/appointment_status"
            android:textColor="@color/black_item_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/doctor"
            android:textColor="@color/black_item_content" />

        <TextView
            android:id="@+id/tv_appointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_doctor"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:padding="3dp"
            android:text="@string/appointment_time"
            android:textColor="@color/black_item_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/disease_description"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/black_item_content" />

</LinearLayout>